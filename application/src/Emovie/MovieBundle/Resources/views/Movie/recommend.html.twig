{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="/css/list.css" media="screen, projection" />
{% endblock %}

{% block body %}
    <h1 class="title">Recommendations for you</h1>

    <ul>
        {% for movie in movies %}
            {% include 'EmovieMovieBundle:Partial:movieItem.html.twig' %}
        {% else %}
            <li>No recommendations found.</li>
        {% endfor %}
    </ul>
{% endblock %}